<article>
  <div class="container">
    <div class="row">
      <div class='col-lg-12'>
        <h2><small>Definição do treino</small> {{displayedName}}</h2>
      </div>
      <div class="col-lg-3">
        <label>Nome</label>
        {{input type="text" value=name placeholder="Nome do Treino" class="form-control"}}
      </div>
      <div class="col-lg-5">
        <label>Descrição</label>
        {{textarea type="text" value=description placeholder="Descrição do Treino" class="form-control"}}
      </div>
      <div class="col-lg-4 text-center">
      </div>
      <div class="col-lg-12" id="daysDiv">
        <h2>Dias de Treino</h2>
        <ul class="nav nav-tabs">
          {{#each days itemController="Day"}}
            <li {{bind-attr class='selected:active'}}>
              <a href="#/trains/new">
                <span {{action "selectDay" this}}>
                  {{displayedName}} 
                  {{#if withoutName}}
                    <i class="fa fa-exclamation-circle"></i>
                  {{/if}}
                </span>
                {{#if deleteMode}}
                  <div>
                    <button class="btn btn-danger" {{action "removeDay" this}}>
                      <i class="fa fa-trash-o"></i> Deletar
                    </button>
                    <button class="btn" {{action "cancelDeleteMode"}}>
                      Cancelar
                    </button>
                  </div>
                {{else}}
                  <i class="fa fa-trash-o" {{action "enterDeleteMode"}}></i>
                {{/if}}
              </a>
            </li>
          {{/each}}
          <li><a {{action "newDay"}} class="btn btn-primary" id="new_day_btn">Novo dia de treino</a></li>
        </ul>
        {{#unless days}}
          <h4>Crie novos dias de treino para montar sua ficha!</h4>
        {{/unless}}
        {{#each days itemController="Day"}}
          {{#if selected}}
            {{view TrainTool.DayContentView}}
          {{/if}}
        {{/each}}
        {{#if canBeSaved}}
          <button class="btn btn-primary" {{action "saveWorkout" this}}>Salvar treino</button>
        {{/if}}
      </div> <!-- col-lg-12 -->
    </div><!-- row -->
  </div>
</article>