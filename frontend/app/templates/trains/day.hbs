<div class="tab-content">
  <div class="tab-pane active" id="dia_&dia.uid">
    <ul class="list-group">
      <li class="list-group-item">
        <div class="row">
          <div class="col-lg-3">  
            <label>Nome</label>
            {{input type='text' placeholder="Nome do dia" value=name class="form-control day_editable_fields"}}
          </div>
          <div class="col-lg-5">
            <label>Comentário</label>
            {{textarea value=comment placeholder="Comentário do dia" class="form-control day_editable_fields"}}
          </div>
        </div>
        <hr>
        <button class="btn btn-primary" {{action "createExercise"}}><strong>Novo Exercício</strong></button>
      </li>
      {{#each exercises itemController="ExercisesInTrain"}}
        <li class="list-group-item clickable" {{action "edit"}}>
          <h4>{{displayedName}} <small>{{reps}}</small></h4>
          {{#unless isEditing}}
            <div class="row">
              <div class="col-lg-4">
                <p>{{execution}}</p>
              </div>
            </div>
          {{/unless}}
        </li>
        {{#if isEditing}}
          <li class="list-group-item clickable open-panel">
            <div class="panel panel-primary">
               <div class="panel-body">
                <div class="row">
                  <div class="col-lg-3">
                    <label for="exampleInputEmail1">Nome</label>
                    {{input type='text' placeholder="Nome do exercício" value=name class="form-control"}}
                  </div>
                  <div class="col-lg-5">
                    <label for="exampleInputEmail1">Exercução</label>
                    {{input type='text' placeholder="Intrução de execução" value=execution class="form-control"}}
                  </div>
                  <div class="col-lg-3">
                      <div class="form-group">
                        <div class="row">
                          <div class="col-lg-12 padding-bottom">
                            <label for="exampleInputEmail1">Séries</label><br>
                            <span class="label label-primary">&object.series</span>
                            <div class="btn-group">
                              <button type="button" class="btn btn-default">+ série</button>
                              <button type="button" class="btn btn-danger">- série</button>
                            </div>
                          </div>
                          <div class="col-lg-5">
                            <input type="integer" class="form-control input-sm" placeholder="Repetições">
                          </div>
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
        {{/if}}
      {{/each}}
