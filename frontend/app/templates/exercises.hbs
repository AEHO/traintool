<article>
	<div class="container">
		<div class="row">
			<div class="col-lg-7">
				<h2>Lista de exercícios</h2>
				<ul class="list-group list">
					{{#each this itemController="exercise"}}
            <li class="list-group-item withFooter clickable">
              <div class="row">
                <div class="col-lg-12 text-left">
                {{#if name}}
                  <span class="name">{{name}}</span></h5>
                {{else}}
                  <span class="name"><span class="glyphicon glyphicon-remove form-control-feedback"></span> Sem nome</span></h5>
                {{/if}}
                </div>
                <div class="col-lg-12 text-center btnFooter" {{action "toggleDetails" on="click"}}>
                  Detalhes
                </div>
                {{#if showDetails}}
                  <div class="col-lg-12 text-left">
                    <p>Nome: {{name}}</p>
                    <p>Comentário: {{comment}}</p>
                    <p>Criado: {{created}}</p>
                    <p>Repetições: {{reps}}</p>
                    <p>Equipamento: {{equipament}}</p>
                    <p>Execução: {{execution}}</p>
                    <p>id: {{id}}</p>
                  </div>
                {{/if}}
              </div>
            </li>
						<!--li>
							<div>
								<p>Nome: {{name}}</p>
								<p>Comentário: {{comment}}</p>
								<p>Criado: {{created}}</p>
								<p>Repetições: {{reps}}</p>
								<p>Equipamento: {{equipament}}</p>
								<p>Execução: {{execution}}</p>
								<p>id: {{id}}</p>
							</div>
						</li-->
					{{/each}}
				</ul>
			</div>
			<div class="col-lg-5">
				<h2>Criar Exercício</h2>
        <div class="form-group">
          <label>Nome</label>
				  <br>{{input valueBinding="model.name" class="form-control" value=exName id="exName"}}
        </div>
				<div class="form-group">
        <label>Comentário</label>
        {{textarea valueBinding="model.comment" class="form-control" value=exComment id="exComment"}}</p>
        </div>
				<div class="form-group">
        <label>Equipamento</label>
        {{input valueBinding="model.equipament" class="form-control" value=exEquipament id="exEquipament"}}</p>
        </div>
				<div class="form-group">
        <label>Execução</label>
        {{input valueBinding="model.execution" class="form-control" value=exExecution id="exExecution"}}</p>
        </div>
				<div class="form-group">
        <label>Repetições</label>
        {{input valueBinding="model.reps" class="form-control" value=exReps id="exReps"}}</p>
        </div>
				<button id="exCreate" class="btn btn-default" {{action "createExercise"}}>Criar exercício</button>
			</div>
		</div>
	</div>
</article>