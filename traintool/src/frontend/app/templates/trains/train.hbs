<article>
  <div class="row">
    <div class="box blue">
      <div class="container">
        <div class='col-lg-12'>
          <h1 class="light"><small>treino</small> {{displayedName}} <small><small> criado a {{format-date created}}</small></small></h1>
          <h2 class="light float-right"></h2>
        </div>
        <div class="col-lg-6">
          <h4 class="light">
            <small>descrição</small> {{description}}
          </h4>
        </div>
        <div class="col-lg-6">
          <h4 class="light">
            <small>comentário</small> {{comment}}
          </h4>
        </div>
      </div>
    </div>
    <div class="box light-blue">
      <h2 class="text-center">Dias de treino</h2>
    </div>
    <div class="background">
      <div class="box">
        <div class="container">
          {{#each day in days itemController="DayInTrain"}}
            <div class="col-lg-4">
              <ul>
                <li class="list-group-item clickable exercise-group-item text-center" {{action "edit"}} {{bind-attr class="isEditing:active"}}>
                  <h3>{{day.name}}</h3>
                  <h5><small>Tempo apropriado</small> {{day.proper_time}} minutos</h5>
                </li>
                <li class="list-group-item open-panel collapsed" {{bind-attr class="isEditing::collapsed"}}>
                  <div class="panel panel-primary">
                    <div class="panel-body">
                      <h5><small>Descrição</small> {{day.description}}</h5>
                    </div>
                  </div>
                </li>
              {{#each exercise in day.exercises itemController="ExercisesInTrain"}}
                <li class="list-group-item clickable exercise-group-item" {{action "edit"}} {{bind-attr class="isEditing:active"}}>
                  <div class="row">
                    <div class="col-xs-10">
                      {{displayedName}} <small>{{joinWithX exercise.reps}}</small> 
                    </div>
                    <div class="col-xs-2">
                      <i class="fa fa-sort-asc"></i>
                    </div>
                  </div>
                </li>
                <li class="list-group-item open-panel collapsed" {{bind-attr class="isEditing::collapsed"}}>
                  <div class="panel panel-primary">
                    <div class="panel-body">
                      <small>
                        {{#if exercise.body_part}}
                          <h5><small>Parte do corpo</small> {{exercise.body_part}}<h5>
                        {{/if}}
                        {{#if exercise.execution}}
                          <h5><small>Execução</small> {{exercise.execution}}<h5>
                        {{/if}}
                        {{#if exercise.comment}}
                          <h5><small>Comentário</small> {{exercise.comment}}<h5>
                        {{/if}}
                      </small>
                    </div>
                  </div>
                </li>
              {{/each}}
            </ul>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</article>
  